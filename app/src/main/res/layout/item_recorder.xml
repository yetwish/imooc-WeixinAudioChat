<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_marginTop="5dp"
              tools:context=".MainActivity">
    <ImageView
        android:id="@+id/item_recorder_iv_icon"
        android:src="@drawable/icon"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <FrameLayout
        android:id="@+id/item_recorder_fl_length"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_recorder_iv_icon"
        android:background="@drawable/chatto_bg_focused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/adj"
            android:id="@+id/item_recorder_anim_view"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        </FrameLayout>
    <TextView
        android:id="@+id/item_recorder_tv_time"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:textColor="@color/btn_text"
        android:text="11"
        android:layout_toLeftOf="@id/item_recorder_fl_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
